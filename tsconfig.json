{
  "compilerOptions": {
      "target": "es6",
      "module": "es2020",
      "moduleResolution": "node",
      "outDir": "./dist",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "allowJs": true,
}
